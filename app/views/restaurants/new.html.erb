<h1>Create new restaurant</h1>
<div class="d-flex justify-content-center m-3">
  <%= simple_form_for (@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, :collection => ['chinese', 'italian', 'japanese', 'french', 'belgian']%>
    <%= f.submit "Submit new restaurant", class: "btn btn-primary p-3 m-3" %>
  <% end %>
</div>

<%= link_to 'Back', restaurants_path, class: 'btn btn-dark m-4' %>
